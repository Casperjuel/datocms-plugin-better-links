{
  "extends": "stylelint-config-recommended",
  "ignoreFiles": ["dist/**/*"],
  "rules": {
    "string-quotes": "single",
    "declaration-block-trailing-semicolon": "always",
    "at-rule-no-unknown": [true, {
      "ignoreAtRules": [
        "function",
        "if",
        "apply",
        "each",
        "include",
        "mixin",
        "return",
        "tailwind",
        "responsive"
      ]
    }]
  }
}
